{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/src/**"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/$1"
        }
    ]
}